{
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "cypress": "^13.14.2",
    "dotenv": "^16.0.3",
    "eslint": "^8.40.0",
    "husky": "^8.0.0",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "test": "npx ts-node ./cypress/support/e2e.ts && (cd src/chainlit/frontend && npm run test)",
